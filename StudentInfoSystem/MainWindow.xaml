<Window x:Class="StudentInfoSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentInfoSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid x:Name="Grid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <GroupBox Grid.Column="1" Header="Image:">
                <Image Width = "200" VerticalAlignment = "Top" Source="/Images/no_image.png"/>
            </GroupBox>
        </Grid>
        
        <GroupBox Grid.Row="0" Grid.Column="1" Header="Personal Information">
            <Grid x:Name="personalInfoGrid">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" x:Name="name" Content="Name:"/>
                <TextBox x:Name="nameField" Grid.Row="0" Grid.Column="1" Height="25"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Middle Name:" />
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="middleNameField" Height="25"/>
                
                <Label Grid.Row="2" Grid.Column="0" Content="Last Name:" />
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="lastNameFIeld" Height="25"/>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="1" Grid.Column="1" Header="Student Information">
            <Grid x:Name="studentInfoGrid">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <Label Grid.Row="0" Grid.Column="0" Content="Faculty:"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="facultyField" Height="25"/>
                
                <Label Content="Course:" Grid.Row="0" Grid.Column="2"/>
                <TextBox x:Name="courseField" Grid.Row="0" Grid.Column="3" Height="25"/>

                <Label Content="Speciality:" Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="specialityField" Grid.Row="1" Grid.Column="1" Height="25"/>

                <Label Content="Flow:" Grid.Row="1" Grid.Column="2"/>
                <TextBox x:Name="flowField" Grid.Row="1" Grid.Column="3" Height="25"/>

                <Label Content="OKC:" Grid.Row="2" Grid.Column="0"/>
                <TextBox x:Name="okcField" Grid.Row="2" Grid.Column="1" Height="25"/>

                <Label Content="Group:" Grid.Row="2" Grid.Column="2"/>
                <TextBox x:Name="groupField" Grid.Row="2" Grid.Column="3" Height="25"/>

                <Label Content="Status" Grid.Row="3" Grid.Column="0"/>
                <TextBox x:Name="statusField" Grid.Row="3" Grid.Column="1" Height="25"/>

                <Label Content="Fac Number:" Grid.Row="4" Grid.Column="0"/>
                <TextBox x:Name="facNumField" Grid.Row="4" Grid.Column="1" Height="25"/>

            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="2" Grid.Column="1" Header="Buttons">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="clearForm" Content="Clear Form" Click="clearForm_Click" Grid.Column="0"/>
                <Button x:Name="fillSampleData" Content="Fill Sample Data" Click="fillSampleData_Click" Grid.Column="1"/>
                <Button x:Name="disableFields" Content="Disable Fields" Click="disableFields_Click" Grid.Column="2"/>
                <Button x:Name="enableFIelds" Content="Enable Fields" Click="enableFIelds_Click" Grid.Column="3"/>
                <Button x:Name="loginButton" Content="Login Button" Click="Login" Grid.Column="4"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
